{
  "metadata": {
    "name": "update-v-v1"
  },
  "spec": {
    "rootResource": "update",
    "firstStage": "update",
    "selfDriving": true,
    "stages": {
      "check-update": {
        "name": "check-update",
        "provider": "providers.stage.http",
        "config": {
          "name": "test",
          "url": "http://localhost:8085/check-update",
          "method": "POST",
          "successCodes": [
            200
          ]
        },
        "inputs": {
          "body": {
            "app-to-update": "${{$trigger(app-to-update, {})}}",
            "conditions": "${{$trigger(conditions, {})}}",
            "status": ""
          }
        },
        "stageSelector": "${{$if($equal($output(check-update, body.status), 200), update, '')}}"
      },
      "update": {
        "name": "update",
        "provider": "providers.stage.http",
        "config": {
          "name": "test",
          "url": "http://localhost:8085/update",
          "method": "POST",
          "successCodes": [
            200,
            202
          ]
        },
        "inputs": {
          "body": {
            "target": "${{$trigger(target, {})}}",
            "status": ""
          }
        },
        "stageSelector": "${{$if($equal($output(update, body.status), 200), health-check, '')}}"
      },
      "health-check": {
        "name": "health-check",
        "provider": "providers.stage.http",
        "config": {
          "name": "test",
          "url": "http://localhost:8085/health-check",
          "method": "POST",
          "successCodes": [
            200,
            202
          ]
        },
         "inputs": {
          "body": {
            "status": ""
          }
        },
        "stageSelector": "${{$if($equal($output(health-check, body.status), 200), '', rollback)}}"
      },
      "rollback": {
        "name": "rollback",
        "provider": "providers.stage.http",
        "config": {
          "name": "test",
          "url": "http://localhost:8085/rollback",
          "method": "POST",
          "successCodes": [
            200,
            202
          ]
        },
        "inputs": {
          "body": {
            "rollback": "${{$trigger(rollback, {})}}"
          }
        }
      }
    }
  }
}
